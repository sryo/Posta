{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Posta",
  "version": "2025.12.27",
  "identifier": "com.posta.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "removeUnusedCommands": true
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Posta",
        "width": 1200,
        "height": 800,
        "minWidth": 400,
        "minHeight": 300,
        "decorations": true,
        "transparent": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https://*.googleapis.com https://*.google.com"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "copyright": "sryo",
    "homepage": "https://github.com/sryo/Posta",
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "targets": ["nsis"]
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": [
          "mailto"
        ]
      }
    }
  }
}